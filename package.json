{
  "name": "all-or-nothing",
  "version": "1.0.0",
  "description": "2-6 player hotseat dice game - premium Expo web PWA",
  "type": "module",
  "main": "node_modules/expo/AppEntry.js",
  "expo": {
    "plugins": []
  },
  "scripts": {
    "start": "expo start --web --clear",
    "web": "expo start --web",
    "build:web": "expo export --platform web --output-dir=dist",
    "deploy": "bash deploy.sh",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.2.3",
    "@react-three/drei": "^9.108.0",
    "@react-three/fiber": "^8.16.0",
    "@react-three/rapier": "^0.13.0",
    "expo": "^51.0.0",
    "expo-haptics": "^14.0.1",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.395.0",
    "nativewind": "^4.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "^0.74.0",
    "react-native-reanimated": "^3.13.0",
    "react-native-web": "^0.19.13",
    "tailwindcss": "^3.4.3",
    "three": "^0.138.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.138.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
